.video-wrap {
  padding: 20rpx;
}
.video-wrap .video {
  width: 100%;
  margin: 0 auto;
  height: 400rpx;
}
.video .control-icon {
  width: 96rpx;
  height: 96rpx;
  position: absolute;
  top: calc(50% - 48rpx);
  left: calc(50% - 48rpx);
}
.video .control-icon > image {
  width: 100%;
  height: 100%;
}
.viewSearch{
  width: 100%;
  height: 10%;
  position: relative;
  align-items: center;
  
  text-align: center;
  margin-top: 10px;
  margin-bottom: 10px;
}

.container{
  margin-top: 10px;
  width: 100%;
  /* 给 scroll-view 固定高度 */
  height: 200px;
}